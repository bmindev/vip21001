    <div class="container pt-lg-4">
      {% render 'breadcrumb' %}
      <div class="row mt-4">
        <div class="col-12 col-md-3  contact-us-left-links">
          <p>Select Query Type</p>
          <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <a class="nav-link active" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Product Related Queries </a>
            <a class="nav-link" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Order Related Queries</a>
            <a class="nav-link" id="v-pills-messages-tab" data-toggle="pill" href="#v-pills-messages" role="tab" aria-controls="v-pills-messages" aria-selected="false">Business Enquiries</a>
            <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">Media Enquiries</a>
          </div>
         
        </div>
        <div class="col-12 col-md-9">
          <div class="tab-content" id="v-pills-tabContent">
            <div class="tab-pane fade show active" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab">
            	{formbuilder:48008}
            </div>
            <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab">
  				{formbuilder:48009}
            </div>
            <div class="tab-pane fade" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab">
            	{formbuilder:48010}
            </div>
            <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
            	{formbuilder:48011}
            </div>
          </div>
        
        </div>
      </div>
      	
     
    </div>
    
    <div class="wrapper d-none">
      <div class="row">
        <div class="col-md-7 col-lg-8 col-xl-7 form-contact">     
          <div class="form-heading">
            <h3 class="title">
              {% render 'multilang' with section.settings.form_title%}
            </h3>
            <p>
              {% render 'multilang' with section.settings.form_subtitle %}
            </p>  
          </div>
          
          {% form 'contact' %}

          {% comment %}
          Successful message
          {% endcomment %}

          {% if form.posted_successfully? %}
          <p class="note form-success" {% if settings.enable_multilang %}data-translate="contact.form.post_success"{% endif %}>
            {{ 'contact.form.post_success' | t }}
          </p>
          {% endif %}

          {{ form.errors | default_errors }}

          <div id="contactFormWrapper">          
            <div class="form-group">
              <label for="contactFormName">
                <span {% if settings.enable_multilang %}data-translate="contact.form.name"{%endif%}>
                  {{ 'contact.form.name' | t }}
                </span>
              </label>
              <input type="text" id="contactFormName" name="contact[name]" autocapitalize="words" placeholder="{{ section.settings.contact_your_name }}">
            </div>

            <div class="form-group">
              <label for="contactFormPhone">
                <span {% if settings.enable_multilang %}data-translate="contact.form.phone"{%endif%}>
                  {{ 'contact.form.phone' | t }}
                </span>
              </label>
              <input type="tel" name="contact[phone]" id="contactFormPhone" pattern="[0-9]*" placeholder="{{ section.settings.contact_phone_number }}">
            </div>

            <div class="form-group">
              <label for="contactFormEmail">
                <span {% if settings.enable_multilang %}data-translate="contact.form.email"{%endif%}>
                  {{ 'contact.form.email' | t }}
                </span>
                <em>*</em>
              </label>
              <input type="email" name="contact[email]" id="contactFormEmail" autocorrect="off" autocapitalize="off" placeholder="{{ section.settings.contact_your_email }}">
            </div>

            <div class="form-group">
              <label for="contactFormMessage">
                <span {% if settings.enable_multilang %}data-translate="contact.form.message"{%endif%}>
                  {{ 'contact.form.message' | t }}
                </span>
                <em>*</em>
              </label>
              <textarea rows="8" name="contact[body]" id="contactFormMessage" {% if settings.enable_multilang %}data-translate="contact.form.placeholder_message" translate-item="placeholder"{%endif%} placeholder="{{ 'contact.form.placeholder_message' | t }}"></textarea>
            </div>

            <input type="submit" class="btn" {% if settings.enable_multilang %}data-translate="contact.form.submit_contact"{%endif%} value="{{ 'contact.form.submit_contact' | t }}">
          </div>
          {% endform %}
        </div>
        
        {% if section.settings.display_location %}
        <div class="col-md-5 info">
          <div class="inner">
          {% if section.settings.top_title != '' and section.settings.top_content != '' %}
            <div class="info-block top-content">
              {% if section.settings.top_title != '' %}
                <h3 class="title">
                  {% render 'multilang' with section.settings.top_title %}
                </h3>
                {% if section.settings.top_content != '' %}
                  {% render 'multilang-block' with section.settings.top_content, class: 'info-content'  %}
                {% endif %}
              {% endif %}
              <a href="mailto:{{section.settings.email}}" class="btn">
                {% render 'multilang' with section.settings.email_button %}
              </a>
            </div>
          {% endif %}
          {% if section.settings.bot_content != '' and section.settings.bot_title != '' %}
            <div class="info-block">
            {% if section.settings.bot_title != '' %}
              <h3 class="title">
                {% render 'multilang' with section.settings.bot_title %}
              </h3>
            {% endif %}
            {% if section.settings.bot_content != '' %}
              {% render 'multilang-block' with section.settings.bot_content, class: 'info-content' %}
            {% endif %}
          {% endif %}
            </div>
          </div>
        </div>
        {% endif %}
      </div>     
    </div>
  </div>    
</div>

<style>
  .contact-us-page{ border-top: 1px solid #06A89C; margin-top: 0.7rem; font-family: 'Open Sans', sans-serif; }
  .page-heading {
    text-align: center;
    position: relative;
    width:70%;
    margin:0 auto;
    margin-bottom: 55px;
  }
  .page-heading:before {
    content: none;
    display:block;
    width: 30%;
    max-width: 315px;
    height:1px;
    background-color: #a6a6a6;
    position: absolute;
    bottom:0;
    left:50%;
    -webkit-transform: translateX(-50%);
    -ms-transform: translateX(-50%);
    -o-transform: translateX(-50%);
    transform: translateX(-50%);
  }
  .page-heading h2{
    text-transform: uppercase;
    font-weight: 700;
    letter-spacing: 0.05em;
    font-size: 30px;
    margin-bottom: 22px;
  }
  .page-heading .des{
    padding-bottom: 18px;
    margin-bottom: 0px;
  }
  .form-contact{
    padding-top:40px;
  }
  .form-heading{
    margin-bottom:25px;
  }
  .form-heading h3.title{
    font-size: {{settings.body_font_size | plus: 2}}px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 26px;
  }
  .contact-form input[type="text"],.contact-form input[type="tel"],.contact-form input[type="email"],.contact-us-page .form-group textarea{
    max-width:630px;
  }
  .info .inner{
    background-color: {{section.settings.background_color}};
    padding:40px 55px;
  }
  .info .top-content{
    margin-bottom: 50px;
  }
  .info h3.title{
    text-transform: uppercase;
    font-weight: 700;
    font-size: {{settings.body_font_size | plus:2}}px;
    letter-spacing: 0.05em;
    margin-bottom: 25px;
  }
  .info .info-content{
    line-height: {{settings.body_font_size | plus:12}}px;
  }
  .info .top-content .info-content{
    margin-bottom: 25px;
  }
   .info .top-content .btn{
    background-color: {{section.settings.email_button_bgc}};
    color: {{section.settings.email_button_txtc}};
    border-color: {{section.settings.email_button_bdc}};
    margin-top: 0;
  }
  .info .top-content .btn:hover{
    background-color: {{section.settings.email_button_bgc_h}};
    color: {{section.settings.email_button_txtc_h}};
    border-color: {{section.settings.email_button_bdc_h}};
  }
  
  .contact-us-left-links{  font-size: 14px; font-weight: 700; border-right: 1px solid #D8D8D8; }
  .contact-us-left-links p{  text-transform: uppercase; margin-bottom: 0.2rem; border-bottom: 1px solid #D8D8D8; padding-bottom: 1.2rem; }
  .contact-us-left-links .nav-link{ padding: 1.2rem 1rem 1.2rem 0; font-size: 15px; position: relative;
    border-bottom: 1px solid #D8D8D8; color: #161616;
    border-radius: 0 !important; }
  
  .globo-form-app.boxed-layout { max-width: 800px !important; border: 1px solid #D8D8D8; box-shadow: none; }
  .globo-form-app .globo-form-control{ padding: 0 10px; margin-bottom: 2rem; }
  .globo-form-app .globo-label, .globo-form-app .globo-form-control label.globo-label, .globo-form-app .globo-form-control label.globo-label span.label-content{ text-align: left; margin-bottom: 0.5rem; }
  .globo-form-app .globo-form-control .help-block.error{ text-align: left; }
  .globo-form-app .message+.footer{ margin-top: 15px; }  
  .globo-form-app .footer button.submit, .globo-form-app .footer button.action.loading .spinner{ font-size: 16px; padding: 11px 40px; text-transform: uppercase; }
  .nav-pills .nav-link:after{ font-family: FontAwesome; position: absolute; right: 20px; font-size: 20px;
    content: "\f105"; }
  
  @media (max-width: 1024px){
    .contact-us-page{ margin-top: 0;}
  
  }
  
  @media (max-width: 991px){
    .info .inner{
      padding:40px 20px;
    }
    .page-heading h2{
      font-size: 24px;
    }
  }

  @media (max-width: 767px){
    .page-heading h2{
      font-size: 20px;
    }
  }
</style>


