        {% if section.settings.link_img_2 != blank %}
        </a>
        {% endif %}

        {% else %}
        <div class="not_img">
            210 x 165px
        </div>
        {% endif %}
    </div>
    {% endif %}
  
    {% if section.settings.enable_custom_block %} 
