    color: {{ section.settings.newsletter_color }}; opacity: 0.7; 
  }
  
  .site-footer .newsletter :-moz-placeholder {
    color: {{ section.settings.newsletter_color }}; opacity: 0.7;
  }
  .site-footer .newsletter .input-group-field{
  	color: {{ section.settings.newsletter_color }}; 
  }
  .site-footer .newsletter .btn {
  	background-color: {{ section.settings.bg_newsletter_button_color }};
    border-color: {{ section.settings.bg_newsletter_button_color }};
    color: {{ section.settings.newsletter_button_color }};
  }
  
